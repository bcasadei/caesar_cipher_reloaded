<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Caesar Cipher Reloaded</title>

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/custom.css" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">

          <form class="form-cipher form-group" id="cipherForm" method>
            <h2 class="form-cipher-heading">Caesar Cipher</h2>
              <label for="inputText" class="sr-only">Enter text to cipher...</label>
              <input type="text" id="inputText" name="cipher" class="form-control" placeholder="Enter text to cipher..." autofocus ></input>
              <div class="form-inline">

              <label for="cipherKey" class="sr-only">Key</label>
              <select type="select" class="select-box" name="key" id="cipherKey">
                <option value="" selected="selected" disabled>Select Key Value…</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>

              <label for="cipherType" class="sr-only">Select Cipher or Decipher…</label>
              <select type="select" class="select-box" name="ciphertype" id="cipherType">
                <option value="cipher" selected="selected">Cipher</option>
                <option value="decipher">Decipher</option>
              </select>
              <button class="btn btn-primary" type="submit" id="sendButton">Submit</button>
            </div>


          </form>

        </div>
        
        <!-- Results -->
        <div class="row results">
          <div class="col-xs-12 col-md-6 col-md-offset-3">
            <div class="cipher-results">
              <h4>Results:</h4>
              <div class="alert <%= alert %>" role="alert"><%= results %></div>
            </div>
          </div>
        </div>
        <!-- End Results -->

      </div>
    </div>
  </body>
</html>
